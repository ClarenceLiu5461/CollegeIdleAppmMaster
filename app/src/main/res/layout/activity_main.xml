<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:text="首頁"
        android:textSize="40sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@color/colorWhite"/>
    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:textSize="22sp"
        android:textColor="@color/colorRed"
        android:layout_marginStart="340dp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:layout_marginBottom="4dp"/>
    <ImageButton
        android:id="@+id/ib_learning_use"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_student_number"
        android:src="@drawable/study_goods"
        android:scaleType="centerCrop"
        android:background="@drawable/border_radius_primary"
        android:layout_marginStart="15dp"/>
    <ImageButton
        android:id="@+id/ib_electric_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="110dp"
        android:layout_below="@+id/tv_student_number"
        android:src="@drawable/electronic_products"
        android:scaleType="centerCrop"
        android:background="@drawable/border_radius_primary"/>
    <ImageButton
        android:id="@+id/ib_daily_use"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="205dp"
        android:layout_below="@id/tv_student_number"
        android:src="@drawable/life_goods"
        android:scaleType="centerCrop"
        android:background="@drawable/border_radius_primary"/>
    <ImageButton
        android:id="@+id/ib_sports_good"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="310dp"
        android:layout_below="@id/tv_student_number"
        android:src="@drawable/sports_goods"
        android:scaleType="centerCrop"
        android:background="@drawable/border_radius_primary"/>
    <TextView
        android:id="@+id/tv_learning_use"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="文書用品"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/ib_learning_use"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/tv_electric_product"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="電子用品"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/ib_electric_product"
        android:layout_marginStart="110dp"/>
    <TextView
        android:id="@+id/tv_daily_use"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="生活用品"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/ib_daily_use"
        android:layout_marginStart="205dp"/>
    <TextView
        android:id="@+id/tv_sports_good"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="體育用品"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/ib_sports_good"
        android:layout_marginStart="310dp"/>
    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_electric_product"
        android:layout_marginTop="4dp"
        android:layout_above="@+id/view2"/>

    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/view2"
        android:background="#FFFFFF"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:id="@+id/ib_home_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_home_page"
        android:src="@drawable/icon_home_page"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>
    <View android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="70dp"
    android:background="#FFFFFF"/>

    <ImageButton
        android:id="@+id/ib_add_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_add_product"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/release" />


    <View
        android:id="@+id/view3"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF" />

    <ImageButton
        android:id="@+id/dingdan_buy_ib"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_personal_center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/buy" />

    <TextView
        android:id="@+id/dingdan_buy_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="买到订单"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="5dp"/>

    <View
        android:id="@+id/view6"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF" />
    <ImageButton
        android:id="@+id/dingdan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_personal_center"
        android:src="@drawable/shopping"
        android:layout_marginStart="240dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/dingdan_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="售出订单"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="230dp"
        android:layout_marginBottom="5dp"/>
    <View
        android:id="@+id/view5"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="295dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF" />


    <ImageButton
        android:id="@+id/ib_personal_center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_personal_center"
        android:src="@drawable/icon_personal_center"
        android:layout_marginStart="330dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="首页"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_add_product"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="发布物品"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="个人中心"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="5dp"/>
    <View android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>