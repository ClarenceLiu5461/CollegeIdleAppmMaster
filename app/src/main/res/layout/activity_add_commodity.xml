<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_publish_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:gravity="center_horizontal"
        android:text="發佈商品"
        android:textColor="@color/colorBrown"
        android:textSize="40sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tv_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_publish_info"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/tv_add_photo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="添加照片"
        android:textSize="22sp"
        android:layout_below="@+id/tv_student_id"
        android:layout_marginStart="7dp"
        android:layout_marginTop="55dp"/>
    <ImageButton
        android:id="@+id/iv_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_take_photo"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_student_id"
        android:layout_marginTop="10dp"
        android:layout_marginStart="120dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_photo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="標題"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_photo"
        android:layout_marginStart="105dp"
        android:layout_marginTop="20dp"
        android:hint="請輸入標題"
        android:maxLines="1"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="類別"
        android:textSize="22sp" />
    <Spinner
        android:id="@+id/spn_type"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:entries="@array/product_type"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_type"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="價格"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spn_type"
        android:layout_marginStart="105dp"
        android:layout_marginTop="20dp"
        android:hint="請輸入價格"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_price"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:text="聯繫方式"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_price"
        android:layout_marginStart="105dp"
        android:layout_marginTop="20dp"
        android:hint="請輸入聯繫方式"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="描述"
        android:textSize="22sp"
        android:layout_below="@+id/tv_phone"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_phone"
        android:layout_marginStart="105dp"
        android:layout_marginTop="20dp"
        android:hint="請輸入聯繫方式"
        android:maxLines="1"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_publish"
        android:text="發佈"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btn_back"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:text="返回"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_cancel"
        android:layout_marginStart="205dp"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>