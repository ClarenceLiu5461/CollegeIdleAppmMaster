<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:text="個人資料"
        android:textColor="@color/colorBlack"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="335dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_my_info"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="用戶帳號:"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/tv_stu_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_my_info"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:layout_marginStart="170dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_number"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="用戶姓名:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_number"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暫未填寫"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_name"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="用户專業:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_major"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_name"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暫未填寫"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_major"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="聯繫方式:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_major"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暫未填寫"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_phone"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="宿舍地址:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_phone"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暫未填寫"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_modify_info"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_stu_address"
        android:text="修改"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_publish"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_stu_address"
        android:text="返回"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_cancel"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>