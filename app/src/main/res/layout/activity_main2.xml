<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer">

        <Button
            android:id="@+id/homepage"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="180dp"
            android:background="#00FFFFFF"
            android:text="首頁"
            android:textAlignment="textStart"
            android:textSize="15dp" />

        <Button
            android:id="@+id/addproduct"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="235dp"
            android:background="#00FFFFFF"
            android:text="發佈商品"
            android:textAlignment="textStart"
            android:textSize="15dp" />

        <Button
            android:id="@+id/productbuy"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="280dp"
            android:background="#00FFFFFF"
            android:text="購買紀錄"
            android:textAlignment="textStart"
            android:textSize="15dp" />
        <Button
            android:id="@+id/productsell"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="335dp"
            android:background="#00FFFFFF"
            android:text="我的售出"
            android:textSize="15dp"
            android:textAlignment="textStart"/>
    </android.support.design.widget.NavigationView>

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- 頁面主要內容，用一個Layout包著  -->
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <!-- 選單 -->


            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@android:color/white">
                <!--要包在視窗內的元件 -->
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="72dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabbutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_launcher_background"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />

        </android.support.design.widget.CoordinatorLayout>

        <!-- 選單 -->

    </android.support.v4.widget.DrawerLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:text="首頁"
        android:textColor="@color/colorBlack"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="340dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="280dp"
        android:text="刷新"
        android:textColor="@color/colorBlack"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/navidrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_48px" />

    <ImageButton
        android:id="@+id/searchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/search" />

    <ImageButton
        android:id="@+id/mapbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp"
        app:srcCompat="@drawable/pin_drop" />

    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/ib_learning_use"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_student_number"
        android:layout_marginStart="15dp"
        android:background="@drawable/border_radius_primary"
        android:scaleType="centerCrop"
        android:src="@drawable/study_goods" />

    <ImageButton
        android:id="@+id/ib_electric_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_student_number"
        android:layout_marginStart="110dp"
        android:background="@drawable/border_radius_primary"
        android:scaleType="centerCrop"
        android:src="@drawable/electronic_products" />

    <ImageButton
        android:id="@+id/ib_daily_use"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_student_number"
        android:layout_marginStart="205dp"
        android:background="@drawable/border_radius_primary"
        android:scaleType="centerCrop"
        android:src="@drawable/life_goods" />

    <ImageButton
        android:id="@+id/ib_sports_good"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_student_number"
        android:layout_marginStart="310dp"
        android:background="@drawable/border_radius_primary"
        android:scaleType="centerCrop"
        android:src="@drawable/sports_goods" />

    <TextView
        android:id="@+id/tv_learning_use"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ib_learning_use"
        android:layout_marginStart="15dp"
        android:text="文書用品"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_electric_product"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ib_electric_product"
        android:layout_marginStart="110dp"
        android:text="電子用品"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_daily_use"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ib_daily_use"
        android:layout_marginStart="205dp"
        android:text="生活用品"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sports_good"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ib_sports_good"
        android:layout_marginStart="310dp"
        android:text="體育用品"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view2"
        android:layout_below="@+id/tv_electric_product"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/view2"
        android:layout_marginTop="70dp"
        android:background="#FFFFFF" />

    <ImageButton
        android:id="@+id/ib_home_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_home_page"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_home_page" />

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="70dp"
        android:background="#FFFFFF" />

    <ImageButton
        android:id="@+id/ib_add_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_add_product"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/release" />


    <View
        android:id="@+id/view3"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF" />

    <ImageButton
        android:id="@+id/dingdan_buy_ib"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_personal_center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/buy" />

    <TextView
        android:id="@+id/dingdan_buy_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="5dp"
        android:text="購買紀錄"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view6"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF" />

    <ImageButton
        android:id="@+id/dingdan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_personal_center"
        android:layout_marginStart="240dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/shopping" />

    <TextView
        android:id="@+id/dingdan_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="230dp"
        android:layout_marginBottom="5dp"
        android:text="我的售出"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view5"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="295dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF" />


    <ImageButton
        android:id="@+id/ib_personal_center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_personal_center"
        android:layout_marginStart="330dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_personal_center" />

    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:text="首頁"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_add_product"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="5dp"
        android:text="發布商品"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="5dp"
        android:text="個人中心"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlack" />


</RelativeLayout>


